{
  "Database": {
    "ConnectionString": "Data Source=CinemaDb.sqlite;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Validation": {
    "CinemaMaxCharacters": 20,
    "HallMaxCharacters": 20,
    "MovieMaxCharacters": 100,
    "PersonMaxCharacters": 50,
    "CinemaLocationRegex": "^[a-zA-Z0-9 ]+$",
    "HallNameRegex": "^[a-zA-Z0-9\\s]+$",
    "PersonNameRegex": "^[a-zA-Z\\s]+$",
    "PersonPasswordRegex": "^\\S{8}$",
    "PersonRoleRegex": "^(user|admin)$",
    "TicketSeatNumberRegex": "^[a-zA-Z0-9]+$"
  },
  "AllowedHosts": "*"
}
